<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.julun.vehicle.search.SearchResultActivity">

    <LinearLayout
        android:id="@+id/query_type_bar"
        android:background="@drawable/app_title_bg_shape"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="全部配件"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:text="车型推荐"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/specific_type_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="选择分类"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:background="@drawable/pop_menu_bg"
            android:layout_height="match_parent" />

        <TextView
            android:text="排序方式"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/pop_menu_bg"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>


    <ListView
        android:id="@+id/prods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>
